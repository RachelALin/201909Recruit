<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ctguqmx.recruit.dao.ContentMapper">

    <resultMap id="BaseResultMap" type="com.ctguqmx.recruit.pojo.Content">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="propaganda" jdbcType="VARCHAR" property="propaganda" />
        <result column="signup" jdbcType="VARCHAR" property="signUp" />
        <result column="seminar" jdbcType="VARCHAR" property="seminar" />
        <result column="exam" jdbcType="VARCHAR" property="exam" />
    </resultMap>

    <select id="selectById" resultType="com.ctguqmx.recruit.pojo.Content">
        select * from `content` where id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        select *from `content`
    </select>

</mapper>
